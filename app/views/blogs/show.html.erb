<center>
	<div class="container-fluid mt-3">

<h6>Category: <%= @blog.category.category %></h6>
<h3><p><%= @blog.title %></p></h3>
<% if @blog.image.attached? %>
  	<%= image_tag @blog.image, width: "500" %>
<% end %>

<p><%= @blog.image_url %></p>
<p>DESCRIPTION</p>
<P><%= @blog.content %></p>

<%= link_to "Edit", edit_blog_path(@blog.id), class: 'btn btn-outline-success' %>
<%= link_to "Delete", "#{@blog.id}/destroy",data: { confirm: 'Are you sure?' }, :method => :delete, class: 'btn btn-outline-danger' %>
<%= link_to "Back", blogs_path, class: 'btn btn-outline-secondary' %>
</div>	
</center>
